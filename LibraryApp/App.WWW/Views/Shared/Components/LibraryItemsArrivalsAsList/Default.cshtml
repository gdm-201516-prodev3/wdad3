@model IPagedList<LibraryItem>
@using PagedList

@if(Model != null && Model.Count() > 0)
{
	<div class="mdl-grid">
		<h3 class="mdl-cell mdl-cell--12-col">Aanwinsten</h3>
		@foreach(var libraryItem in Model)
		{
			
			<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--6-col-desktop">
				<div class="mdl-card__title">
					<h2 class="mdl-card__title-text">@libraryItem.Title</h2>
				</div>
				<div class="mdl-card__supporting-text">
					@libraryItem.Year<br>@libraryItem.Author<br>@libraryItem.Type
				</div>
				<div class="mdl-card__actions mdl-card--border">
					<a asp-controller="Library" asp-action="Details" asp-route-id="@libraryItem.Id" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Lees meer ...</a>
				</div>
				<div class="mdl-card__menu">
					<button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
					<i class="material-icons">share</i>
					</button>
				</div>
			</div>
		}
	</div>
}
else
{
	<div>Geen aanwinsten beschikbaar!</div>
}