@model IEnumerable<App.Models.Library>

@if(Model != null && Model.Count() > 0)
{
	<div class="mdl-grid">
		@foreach(var library in Model)
		{
			
			<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--6-col-desktop">
				<div class="mdl-card__title">
					<h2 class="mdl-card__title-text">@library.Name</h2>
				</div>
				<div class="mdl-card__supporting-text">
					@library.Description
				</div>
				<div class="mdl-card__actions mdl-card--border">
					<a asp-controller="Library" asp-action="Details" asp-route-id="@library.Id" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Lees meer ...</a>
				</div>
				<div class="mdl-card__menu">
					<button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
					<i class="material-icons">share</i>
					</button>
				</div>
			</div>
		}
	</div>
}
else
{
	<div>Geen nieuwsberichten beschikbaar!</div>
}