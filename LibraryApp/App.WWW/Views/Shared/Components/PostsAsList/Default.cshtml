@model IEnumerable<App.Models.Post>

@if(Model != null && Model.Count() > 0)
{
	<div class="mdl-grid">
		<h3 class="mdl-cell mdl-cell--12-col">Nieuws</h3>
		@foreach(var post in Model)
		{
			<div class="dds-card-wide mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
				<div class="mdl-card__title">
					<h2 class="mdl-card__title-text">@post.Title</h2>
				</div>
				<div class="mdl-card__supporting-text">
					@post.Synopsis
				</div>
				<div class="mdl-card__actions mdl-card--border">
					<a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Lees meer ...</a>
					@if(@post.Library != null) { <a asp-controller="Library" asp-action="Details" asp-route-id="@post.Library.Id" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">@post.Library.Name</a> }
				</div>
				<div class="mdl-card__menu">
					<button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
					<i class="material-icons">share</i>
					</button>
				</div>
			</div>
		}
	</div>
}
else
{
	<div>Geen nieuwsberichten beschikbaar!</div>
}